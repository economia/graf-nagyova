@import colors
@import prefixes
@import extraIg

.ig
    @import basics
.ig.base
    width 650px
    height 650px
    position relative
    svg
        g.series
            path.line
                fill none
                stroke-width 2px
                stroke-opacity 0.6
            path.symbol
                stroke-width 2px
                stroke-opacity 0.6
                &:hover
                    cursor help

            &:hover
            &.active
                path
                    stroke-opacity 1

    ul.legend
        margin 0px
        position absolute
        top 0px
        right 0px
        li
            padding 0px
            float left
            list-style-type none
            margin 0px 8px
            img
                opacity 0.6
                width 70px
                height 70px
                border-radius 50%
                border-width 3px
                border-style solid
                &:hover
                    opacity 1
                    cursor help
.tooltip
    max-width 300px
